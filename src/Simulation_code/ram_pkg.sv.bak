
    package RAM_pkg;
		parameter Tox_I = 7;
		parameter Tix 	= 2*Tox_I;
		parameter Tox 	= Tix;
		
		parameter Toy_I = 7;
		parameter Tiy 	= 2*Toy_I;
		parameter Toy 	= Tiy;
		
		parameter Nkx 	= 3;
		parameter Nky  = 3;
		
		parameter Tif 	= 8;
		parameter Tof 	= Tif;
		
		parameter Npar = 4
		;
		parameter Nnp 	= 2;
		
		parameter Size_Par = Npar * Nnp;
		parameter KDWSize = Nkx * Nky; // 16 bits each weight
		parameter init_words = 8;
		parameter max_Ngr = 2; //Tif / Npar
		// Bitwidth
		parameter POS_W = 3; // Log2(Npar)
		parameter PX_W = 16;
		parameter WG_W = 16;
		// RAM FMI param
		parameter FMI_N_ELEM = Tix * Tiy * Tif;
		parameter FMI_N_CHAN = Tix * Tiy;
		// RAM FMO param
		parameter FMO_N_ELEM = Tox * Toy * Tof;
		// RAM KEX param
		parameter KEX_N_ELEM = Nnp * max_Ngr * Npar;
		// RAM KPW param
		parameter KPW_N_ELEM = Nnp * Tof;
		// RAM FDW param
		parameter KDW_N_ELEM = Nkx * Nky * Npar;
	endpackage
